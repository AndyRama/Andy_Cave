<div class="container size-container">
  <% carts.each do |item| %>
  <div class="cart-cards">
    <%= cl_image_tag item.product.photo.key, height: 75, width: 75, crop: :fill %>
    <div>
      <p><%= item.product.name %></p>
    </div>
    <div>
      <p><%= item.product.price %>€</p>
    </div>
    <div class="d-flex justify-flex-end">
      <%= link_to 'remove', cart_path(item), method: :delete %>
    </div>
  </div>
    <% end %>
    <% total = 0 %>
    <% carts.each do |item| %>
    <% total += item.product.price %>
    <% end %>
  <% unless carts.empty? %>
  <div>
    <h5>Total :<%= total %>€</h5>
  </div>
    <%= link_to  "VALID CART & PAY", transactions_path, method: :post, class: "btn btn-ghost-revert" %>
  <% end %>
</div>
