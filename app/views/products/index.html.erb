<div class="container size-container">
  <div class="all">
    <% @products.each do |product| %>
      <div class="card-product" data-category="<%= product.category_id %>" >
        <div class="card-img-top">
          <%= cl_image_tag product.photo.key, width: 300, height: 300, crop: :thumb %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <h6 class="card-username mb-2 text-muted"><%= product.user.username %></h6>
          <div class="card-text">
            <%= product.description.truncate(60, separator: /[\.\,: ]/, omission: ' ...') %>
          </div>
          <div class="card-footer d-flex">
            <div class="card-product-pricing text-success">
              <h5 id="prix"><%= product.price %>â‚¬</h5>
            </div>
            <%= link_to product_carts_path(product.id), class:"btn btn-ghost-revert", method: :post do %>
              <i class="fas fa-shopping-cart"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
