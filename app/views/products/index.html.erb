<div class="size-container">
  <div class="cards">
    <% @products.each do |product| %>
      <div class="card">
        <img class="card-img" src="https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/vans.png" alt="Vans">
        <div class="card-img-overlay d-flex justify-content-end">
          <a href="#" class="card-link text-danger like">
            <i class="fas fa-heart"></i>
          </a>
        </div>
        <div class="card-body">
          <h4 class="card-title"><%= product.name %> </h4>
          <p class="card-text">
            <%= product.description %></p>
          <div class="buy d-flex justify-content-between align-items-center">
            <div class="price text-success"><h5 class="mt-4"><%= product.price %>â‚¬</h5></div>
            <a href="#" class="btn btn-danger mt-3">Add to Cart</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



