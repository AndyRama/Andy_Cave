<div class="container size-container">
  <div class="cards">
    <% @products.each do |product| %>
      <div class="card-product">
        <%# <img class="card-img" src="https://res.cloudinary.com/dykscnyvu/image/upload/v1605625374/josh-duncan-6Sa26Lsjtok-unsplash_y6qw6l.jpg" alt="Vans"> %>
        <div class="card-img">
          <%= cl_image_tag product.photo.key %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= product.user.username %></h6>
          <p class="card-text">
            <%= product.description.truncate(60, separator: /[\.\,: ]/, omission: ' ...') %>
          </p>
          <div class="card-footer">
            <div class="card-product-pricing text-success">
              <h5 class="mt-4"><%= product.price %>â‚¬</h5>
            </div>
            <%= link_to product_carts_path(product.id), class:"btn btn-ghost-revert", method: :post do %>
              <i class="fas fa-shopping-cart"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
